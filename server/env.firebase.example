# Firebase Configuration
FIREBASE_PROJECT_ID=your-firebase-project-id

# Option 1: Service Account Key (Recommended for production)
# Download your service account key from Firebase Console > Project Settings > Service Accounts
# Copy the entire JSON content and paste it as a single line (escape quotes)
FIREBASE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"your-project-id",...}

# Option 2: Default Credentials (For local development)
# Set GOOGLE_APPLICATION_CREDENTIALS environment variable to point to your service account key file
# GOOGLE_APPLICATION_CREDENTIALS=path/to/your/service-account-key.json

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=24h

# Admin User Configuration
ADMIN_EMAIL=admin@etraffic.com
ADMIN_PASSWORD=admin123

# SMS Service Configuration (if using SMS features)
SMS_API_KEY=your-sms-api-key
SMS_API_URL=https://api.sms-service.com/send

# Server Configuration
PORT=5000
NODE_ENV=development

# Legacy MySQL Configuration (can be removed after migration)
# DB_HOST=localhost
# DB_USER=root
# DB_PASSWORD=
# DB_NAME=e_traffic_db
# DB_PORT=3306
